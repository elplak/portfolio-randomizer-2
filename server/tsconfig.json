{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "rootDir": ".",
    "outDir": "../dist",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "core/*": ["core/*"],
      "data/*": ["data/*"],
      "features/*": ["features/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}